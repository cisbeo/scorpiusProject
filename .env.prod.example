# Production Environment Variables - Scorpius Project
# Copy this file to .env.prod and fill in the actual values

# Application Settings
APP_ENV=production
APP_NAME=ScorpiusProject
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database Configuration
# Generate with: openssl rand -base64 32
DB_PASSWORD=your_secure_db_password_here
DATABASE_URL=postgresql://scorpius:${DB_PASSWORD}@postgres:5432/scorpius_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
# Generate with: openssl rand -base64 32
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Security Settings
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_here
# Generate with: openssl rand -hex 32
SECRET_KEY=your_app_secret_key_here

# JWT Token Settings
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256
BCRYPT_ROUNDS=12

# CORS Settings
CORS_ORIGINS=["https://votre-domaine.fr","https://www.votre-domaine.fr"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","PATCH","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# File Upload Settings
MAX_UPLOAD_SIZE=104857600
UPLOAD_PATH=/app/uploads
ALLOWED_EXTENSIONS=[".pdf",".doc",".docx",".txt",".rtf"]
TEMP_PATH=/app/temp

# Document Processing
PROCESSING_TIMEOUT=30

# Email Settings (Optional)
SMTP_HOST=smtp.votre-domaine.fr
SMTP_PORT=587
SMTP_USER=noreply@votre-domaine.fr
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM=noreply@votre-domaine.fr

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_FORMAT=json

# Domain Configuration
DOMAIN=votre-domaine.fr
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem